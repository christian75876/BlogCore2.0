@model BlogCore_Models.Articulo

@{
	ViewData["Tittle"] = "Detalle Articulo";

	DateTime fechaDeCreacion = DateTime.Parse(Model.FechaCreacion!);

	string fecha = fechaDeCreacion.ToString("yyyy-MM-dd");
}

@section Header
{
	<header>

		<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
			<div class="container">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="/Cliente/Home">
								Home
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administrar contenidos</a>
							<div class="dropdown-menu">
								<a class="dropdown-item" asp-area="Admin" asp-controller="Categorias" asp-action="Index">Categoria</a>
								<a class="dropdown-item" asp-area="Admin" asp-controller="Articulos" asp-action="Index">Actividad</a>
								<a class="dropdown-item" asp-area="Admin" asp-controller="Sliders" asp-action="Index">Sliders</a>
								<a class="dropdown-item" asp-area="Admin" asp-controller="Usuarios" asp-action="Index">Usuarios</a>

							</div>
						</li>
					</ul>
					<form class="d-flex">
						<input class="form-control me-sm-2" type="search" placeholder="Search">
						<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
					</form>
				</div>
			</div>
			<partial name="_LoginPartial"/>
		</nav>


		<!--Aqui vita parcial slider-->

		@if(ViewBag.IsHome == true)
		{
			<partial name="_Slider" />
		}

	</header>
}
<br />
<div class="container">
	<div class="card-header ms-3">
		<div class="col-12 col-md-6">
			<h1 class="text-primary">@Model.Nombre</h1>
		</div>
		<div>
			<p class="text-muted">Fecha de cracion: @fecha</p>
		</div>
		<div class="card-body text-md-start">
			<div class="col-12">
				<img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
				<p>@Html.Raw(Model.Descripcion)</p>
			</div>
		</div>
		<div class="card-footer">
			<div class="row">
				<div class="col-12 col-md-6 pb-1">
					<a asp-action="Index" class="btn btn-success btn-sm">Volver atras</a>
				</div>
			</div>
		</div>

	</div>
</div>
