@model BlogCore_Models.Articulo

@{
	ViewData["Tittle"] = "Detalle Articulo";

	DateTime fechaDeCreacion = DateTime.Parse(Model.FechaCreacion);

	string fecha = fechaDeCreacion.ToString("yyyy-MM-dd");
}
<br />
<div class="container">
	<div class="card-header bg-light text-light">
		<div class="col-12 col-md-6">
			<h1 class="text-primary text-center">@Model.Nombre</h1>
		</div>
		<div class="col-12 col-md-6 text-md-end">
			<p class="text-muted">Fecha de cracion: @fecha</p>
		</div>
		<div class="card-body">
			<div class="col-12">
				<img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
				<p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
			</div>
		</div>
		<div class="card-footer">
			<div class="row">
				<div class="col-12 col-md-6 pb-1">
					<a asp-action="Index" class="btn btn-success btn-sm">Volver atras</a>
				</div>
			</div>
		</div>

	</div>
</div>
