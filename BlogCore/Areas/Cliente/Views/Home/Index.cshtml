@model BlogCore_Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Inicio";
}

@section Header
{
    <partial name="_Header"/>
}


<div class="row mt-1">
    <div class="col-sm-12">
		@* <h1 class="text-center text-white bg-primary py-1">Actividades de validaciones</h1> *@
    </div>
</div>

@if(Model.ListaArticulos.Count() > 0)
{
	<hr />
    <div class="row">
        @foreach(var item in Model.ListaArticulos.OrderBy(o => o.Id))
        {
            <div class="col-4">
				<div class="card">
					<img src="@item.UrlImagen" class="img-thumbnail" width="100%" />
					<div class="card-body">
						<h5 class="card-title">@item.Nombre</h5>
                        <a asp-action="Detalle" class="btn-success" style="border-radius;10px" asp-route-id="@item.Id">
                            Mas informacion
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
}
else 
{
    <p>No hay articulos</p>
}


